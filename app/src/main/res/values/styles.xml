<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BackgroundMain">
        <item name="android:background">@drawable/background_mainfinal</item>
    </style>

    <style name="BackgroundSlash">
        <item name="android:background">@drawable/background_slash</item>
    </style>

    <style name="BackgroundSearchTab">
        <item name="android:background">@drawable/search_tab</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/raleway_black</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">#2CD1DF</item>
    </style>

    <style name="customButton">
        <item name="android:fontFamily">@font/raleway_black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#2CD1DF</item>
        <item name="android:layout_width">102dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="EditTextStyling">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#DDDDDD</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#2CD1DF</item>
        <item name="colorControlActivated">#FFFFFF</item>
    </style>

    <style name="ErrorText">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#F52222</item>
    </style>

    <style name="WelcomeUsernameStyling">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SimpleText">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="customSpinner">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#1D0D73</item>
        <item name="android:color">#1D0D73</item>
        <item name="android:textColorHint">#E328BC</item>
    </style>

    <style name="UserViewOptionLabel">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListViewItem_Name">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#2CD1DF</item>
    </style>
    <style name="ListViewItem_Privacy">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#E328BC</item>
    </style>
    <style name="ListViewItem_Text">
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
