<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/BackgroundSlash"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcomeTextView"
        style="@style/HeaderText"
        android:layout_width="236dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="@string/welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeUserName"
        style="@style/WelcomeUsernameStyling"
        android:layout_width="192dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />

    <TextView
        android:id="@+id/chooseOptionTextView"
        style="@style/SimpleText"
        android:layout_width="295dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="8dp"
        android:text="@string/welcome_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myLocationsButton"
        style="@style/customButton"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:background="@drawable/round_button"
        android:onClick="viewMyLocations"
        android:text="@string/my_locations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseOptionTextView" />

    <Button
        android:id="@+id/sharedLocations"
        style="@style/customButton"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:background="@drawable/round_button"
        android:onClick="viewSharedLocations"
        android:text="@string/shared_locations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myLocationsButton" />

</android.support.constraint.ConstraintLayout>